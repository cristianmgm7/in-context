rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null && request.auth.uid != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user owns the project
    function isProjectOwner(projectId) {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)/projects/$(projectId));
    }

    // Users collection - each user can only access their own document
    match /users/{userId} {
      // Users can read and write their own user document
      allow read, write: if isOwner(userId);
    }

    // Projects subcollection - nested under users
    match /users/{userId}/projects/{projectId} {
      // Only the project owner can access their projects
      allow read, write: if isOwner(userId);
    }

    // Thoughts subcollection - nested under projects
    match /users/{userId}/projects/{projectId}/thoughts/{thoughtId} {
      // Only the project owner can access thoughts in their projects
      allow read, write: if isOwner(userId) && isProjectOwner(projectId);
    }

    // Contexts subcollection - nested under projects
    match /users/{userId}/projects/{projectId}/contexts/{contextId} {
      // Only the project owner can access contexts in their projects
      allow read, write: if isOwner(userId) && isProjectOwner(projectId);
    }

    // Outputs subcollection - nested under projects
    match /users/{userId}/projects/{projectId}/outputs/{outputId} {
      // Only the project owner can access outputs in their projects
      allow read, write: if isOwner(userId) && isProjectOwner(projectId);
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
