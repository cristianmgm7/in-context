rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null && request.auth.uid != null;
    }

    // Helper function to check if user owns the file
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Audio files - stored under user-specific paths
    match /audio/{userId}/{allPaths=**} {
      // Only the file owner can access their audio files
      allow read, write: if isOwner(userId);
    }

    // User profile images or other user-specific files
    match /users/{userId}/{allPaths=**} {
      // Only the user can access their own files
      allow read, write: if isOwner(userId);
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
